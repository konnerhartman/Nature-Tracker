<div class="card">
    <h3 class="card-header">Edit Animal: {{animal.name}}</h3>
    <form class="card-body edit-post-form">
        <label for="animal-name" class="form-label">Name</label>
        <input name="animal-name" type="text" value="{{animal.name}}" class="form-input" />
        <label class="form-label" for="description">Description</label>
        <input name="description" type="text" value="{{animal.description}}" class="form-input" />
        <label class="form-label" for="location">Location</label>
        <input name="location" type="text" value="{{animal.location}}" class="form-input" />
        <button type="submit" class="btn">Update Animal</button>
        <button type="button" class="delete-post-btn btn">Delete Animal</button>
    </form>
</div>


<script src="/js/editAnimal.js"></script>
<script src="/js/deleteAnimal.js"></script>