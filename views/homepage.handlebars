{{!-- <!-- Loop over each object in the projects array -->
{{#each animals as |animal| }}
<div class="row mb-4 project bg-light">
  <div class="col-md-5">
    <h2>
      <a href="/api/animals/{{animal.id}}">{{animal.name}}</a>
    </h2>
    <div class="col-md-7">
      <h4>Description:</h4>
    <p>
      {{animal.description}}
    </p>
  </div>
      <h5>Found In:</h5>
    <p>
      {{animal.location}}
    </p>
    <p>Created by {{animal.user.name}} on {{format_date animal.date_created}}</p>
  </div>
  
</div>
{{/each}} --}}

{{#if animals.length}}
<section>
  <h2>All Animals</h2>
    {{#each animals as |animal|}}
      {{> animalInfo animal}}
    {{/each}}

</section>
{{/if}}