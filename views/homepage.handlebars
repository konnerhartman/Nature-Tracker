<!-- Loop over each object in the projects array -->
{{#each animals as |animal| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/animals/{{animal.id}}">{{animal.name}}</a>
    </h2>
    <p>
      {{animal.location}}
    </p>
    <p>Created by {{animal.user.name}} on {{format_date animal.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{animal.description}}
    </p>
  </div>
</div>
{{/each}}