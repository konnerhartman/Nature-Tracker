<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add A New Find:</h3>

    <form class="form ">
      <div class="form-group">
        <label for="animal-name">animal name:</label>
        <input class="form-input" type="text" id="animal-name" name="animal-name" />
      </div>
      <div class="form-group">
        <label for="animal-desc">description:</label>
        <textarea class="form-input" id="animal-desc" name="animal-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if animals.length}}
  <div class="col-md-6 project-list">
    <h3>Current Animals:</h3>

    {{#each animals as |animal|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{animal.id}}">{{animal.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{animal.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/js/dashboard.js"></script>
